<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="winui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:winui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dota 2 Localization Changer"
    mc:Ignorable="d">
    <StackPanel
        Grid.Column="0"
        Padding="15"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <TextBlock Text="Choose your hero:" />
        <ListBox
            x:Name="color_picker"
            MaxWidth="500"
            MaxHeight="200">
            <ListBoxItem Content="Abaddon" />
            <ListBoxItem Content="Anti-Mage" />
        </ListBox>
        <TextBlock x:Name="result">TEST</TextBlock>
    </StackPanel>
</Window>